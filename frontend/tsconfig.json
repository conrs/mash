{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es6",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "html/js",
        "sourceMap": true,
        "lib": [
            "dom"
        ]
    },
    "include": [
        "ts/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}

